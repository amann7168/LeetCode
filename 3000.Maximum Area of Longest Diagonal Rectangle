class Solution {
public:
    int areaOfMaxDiagonal(vector<vector<int>>& dim) {
        int maxi = 0;
        int area = 0;

        for (int i = 0; i < dim.size(); i++) {
            int l = dim[i][0];
            int w = dim[i][1];
            int curr = l * l + w * w;

            if (curr > maxi || (curr == maxi && l * w > area)) {
                maxi = curr;
                area = l * w;
            }
        }

        return area;
    }
};
